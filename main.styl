@import url("http://fonts.googleapis.com/css?family=Open+Sans:700,400")

@font-face {
	font-family: 'icomoon';
	src:url('fonts/icomoon.eot?3ui975');
	src:url('fonts/icomoon.eot?#iefix3ui975') format('embedded-opentype'),
		url('fonts/icomoon.woff?3ui975') format('woff'),
		url('fonts/icomoon.ttf?3ui975') format('truetype'),
		url('fonts/icomoon.svg?3ui975#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-pen:before {
	content: "\e601";
	margin-right 0.8em
}
.icon-star:before {
	content: "\e604";
	color #ffbe2c
	margin-right 0.4em
	position relative
	top 0.1em

}
.icon-arrow-down:before {
	content: "\e602";
	color #f4502a
}
.icon-arrow-up:before {
	content: "\e603";
	color #00ff00
}

a
	color azul
	
body
	background #eeeeee
	font-family "Open Sans"
	font-size 16px 
	
header
	background #343b54
	color white
	overflow hidden
	padding 0.5em
	position relative
	figure
		float left
	h1
		font-size 1.2em
		font-weight normal
		margin 0.2em 70px 0 4em 
	#avatar
		margin 0.5em 0.5em 0 0
		position absolute
		right 0
		top 0
		img
			border-radius 50%
			width 55px
	#logo
		border-right 1px solid white
		margin 0
		img
			margin-right 0.5em
			padding-right 0.5em
			transition 1s
			width 52px
			&:hover
				-webkit-transform rotate(360deg)
					
			
footer
	color rgba(255,255,255,0.7)
	background azul
	text-align center
	padding 1em
	p
		&:first-child
			margin-bottom 0
		&:last-child
			margin-top 0
			&:after
				content " -"
			&:before
				content "- "
nav
	background #7488cd //#80bca3
	box-shadow rgba(0,0,0,0.3) 0px 4px 5px
	padding 0 6em 0 0.5em
	position relative
	ul
		list-style none
		margin 0
		padding 0
		li
			display inline-block
			margin 0 1em 0 0
			a
				color white
				display block
				padding 0.5em 0
		
		#publicar_nav
			position absolute
			right 0
			top -0.5em
			a
				background azul
				border-radius 5px
				box-shadow rgba(0,0,0,0.3) 5px 5px 5px
				font-style italic
				padding 0.8em 0.5em
				text-decoration none
				text-shadow rgba(0,0,0,0.5) 2px 2px 5px
				
aside
	display none
				
#contenido
	margin 1em
	.item
		background white
		border-bottom 3px solid azul
		margin-bottom 3em
		min-height 128px
		position relative
		.autor_item
			color #aaa
		.datos_item
			margin 1em 1em 0 0
			text-align right
			.fecha_item
				color #aaa
			.tag_item
				background #f4502a
				border-radius 0.5em
				color white
				display inline-block
				float left
				padding 0.2em 0.5em
				text-decoration none
		.imagen_item
			float left
			margin 0 1em 0 0
			img
				width 96px
		.titulo_item
			font-size 1.2em
			font-style italic
			margin 0 0 0.25em 0
			padding 1em 1em 0 0
			a
				color #444
				text-decoration none
		.votacion
			background white
			border-radius 0 0 0.5em 0.5em
			left 1%
			margin-top 1em
			padding 0.5em 0.2em
			position absolute
			top 91%
			width 95%
			a
				text-decoration none
			.comentarios_item
			.guardar_item
				float right
				
.formulario
	display none
	padding 1em
	text-align right
	input
		border 1px solid #ccc
		border-radius 5px
		padding 0.2em 0.6em
	input[type="submit"]
		background azul
		box-shadow rgba(0,0,0,0.5) 5px 5px 20px
		color white
		font-style italic
		text-shadow rgba(0,0,0,0.5) 2px 2px 5px
		
		
	

@media screen and (min-width 800px)
	#contenido
		overflow hidden
		.item
			float left
			vertical-align top
			width 49%
			&:nth-child(odd)
				margin-right 2%
				
@media screen and (min-width 1000px)
	aside
		display block
		float right
		margin 1em
		width 20%
		video
			width 100%
		